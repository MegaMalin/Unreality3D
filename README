Class GameObject
{
	Vector3 pos;
	Vector3 rot;
	Vector3 scale;
	Vector3 dir;

	Mesh model;
	size_t id;

	Start();
	Update();
	OnCollisionEnter(GameObject &);

	enum	Tag;
};

Class Unit : public GameObject
{
	int _level;
	Stats _stats;
	Stats _basicStats;
	Controller _controller;
	std::vector<Skill> skills;	
};

Class Stats
{
	int life;
	int currentLife;
	int mana;
	int currentMana;
	int damage;
	int range;
	int speed;
	int def;
	float attackRate;
};

class Player : public Unit
{
	Player();
};

class Mob : public unit
{
	Mob();
};